@article{BoeFinancialDifficultiesStudent2020,
  ids = {BoeFinancialDifficultiesStudent2021},
  title = {Financial {{Difficulties}} and {{Student Health}}: {{Results}} from a {{National Cross-Sectional Survey}} of {{Norwegian College}} and {{University}} Students},
  shorttitle = {Financial {{Difficulties}} and {{Student Health}}},
