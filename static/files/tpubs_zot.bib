@article{AskelandAssociationDepressiveSymptoms2022,
  title = {Association of {{Depressive Symptoms}} in {{Late Adolescence}} and {{School Dropout}}},
  author = {Askeland, Kristin G{\"a}rtner and B{\o}e, Tormod and Sivertsen, B{\o}rge and Linton, Steven J. and Heradstveit, Ove and Nilsen, Sondre Aasen and Hysing, Mari},
