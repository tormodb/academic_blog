@article{SivertsenMentalhealthproblems2023,
  title = {Mental Health Problems and Suicidal Behavior from Adolescence to Young Adulthood in College: Linking Two Population-Based Studies},
  shorttitle = {Mental Health Problems and Suicidal Behavior from Adolescence to Young Adulthood in College},
  author = {Sivertsen, B{\o}rge and O'Connor, Rory C. and Nilsen, Sondre Aasen and Heradstveit, Ove and Askeland, Kristin G{\"a}rtner and B{\o}e, Tormod and Hysing, Mari},
